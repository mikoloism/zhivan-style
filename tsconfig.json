{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./",
        "paths": {
            "components/*": ["components/*"],
            "pages/*": ["pages/*"],
            "styles/*": ["styles/*"],
            "styles/normalize.css": [
                "node_modules/normalize.css/normalize.css"
            ],
            "styles/yek.scss": ["node_modules/@yek/sass/dist/index.scss"],
            "atoms/*": ["components/atoms/*"],
            "atoms/*.module.scss": ["styles/components/atoms/*"],
            "atoms": ["components/atoms"],
            "molecules/*": ["components/molecules/*"],
            "molecules/*.module.scss": ["styles/components/molecules/*"],
            "molecules": ["components/molecules"],
            "organisms/*": ["components/organisms/*"],
            "organisms/*.module.scss": ["styles/components/organisms/*"],
            "organisms/": ["components/organisms"],
            "templates/*": ["components/templates/*"],
            "templates/*.module.scss": ["styles/components/templates/*"],
            "templates": ["components/templates"]
        }
    },
    "include": ["next-env.d.ts", "./**/*.ts", "./**/*.tsx"],
    "exclude": ["node_modules"]
}
